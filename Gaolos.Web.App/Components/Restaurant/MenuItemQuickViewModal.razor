            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- Product gallery-->
                    <div class="col-lg-7 col-md-6 pe-lg-0"><img src="@_menuItem.ImageUrl" alt="@_menuItem.Name"></div>
                    <!-- Product details-->
                    <div class="col-lg-5 col-md-6 pt-4 pt-lg-0">
                        <div class="product-details ms-auto pb-3">
                            <div class="mb-3"><span class="h3 fw-normal text-accent me-1">R@_menuItem.Price</span></div>
                            <div class="mb-grid-gutter"> @* form *@
                                <div class="row mx-n2">
                                 @*    <div class="col-6 px-2">
                                        <div class="mb-3">
                                            <label class="form-label" for="pizza-size">Size:</label>
                                            <select class="form-select" id="pizza-size">
                                                <option value="small">Small</option>
                                                <option value="medium">Medium</option>
                                                <option value="large">Large</option>
                                            </select>
                                        </div>
                                    </div> *@
                                    <div class="col-6 px-2">
                              @*           <div class="mb-3">
                                            <label class="form-label" for="pizza-base">Base:</label>
                                            <select class="form-select" id="pizza-base">
                                                <option value="standard">Standard</option>
                                                <option value="thin">Thin</option>
                                            </select>
                                        </div> *@
                                    </div>
                                </div>
                                <div class="mb-3 d-flex align-items-center">
                                    <select @bind="@_quantity" class="form-select me-3" style="width: 5rem;">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                    <button class="btn btn-primary btn-shadow d-block w-100" @onclick="async()=> await AddToCart(_menuItem)" type="submit"><i class="ci-cart fs-lg me-2"></i>@(_cartQuantity==0 ? "Add to Cart" : _cartQuantity)</button>
                                </div>
                            </div>
                            <h5 class="h6 mb-3 pb-3 border-bottom"><i class="ci-announcement text-muted fs-lg align-middle mt-n1 me-2"></i>Product info</h5>
                            <h6 class="fs-sm mb-2">Description:</h6>
                            <p class="fs-sm">@_menuItem.Description</p>
