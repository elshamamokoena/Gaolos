 <!-- Navbar for Food Delivery Service demo-->
<!-- Remove "navbar-sticky" class to make navigation bar scrollable with the page.-->

<Search/>

<header class="navbar d-block navbar-sticky navbar-expand-lg navbar-light bg-light ">
    <TopBar/>
    <div class="container">
        <a class="navbar-brand d-none d-sm-block me-4 order-lg-1" href=@("/")><img src="img/logo-dark.png" width="142" alt="Gaolos"></a><a class="navbar-brand d-sm-none me-2 order-lg-1" href=@("/")><img src="img/logo-icon.png" width="64" alt="Gaolos"></a>
       
        <div class="navbar-toolbar d-flex align-items-center order-lg-3">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"><span class="navbar-toggler-icon"></span></button>
            <a class="navbar-tool d-none d-lg-flex" href="javascript:void(0)" data-bs-toggle="offcanvas" data-bs-target="#searchBox" role="button" aria-expanded="false" aria-controls="searchBox">
                <span class="navbar-tool-tooltip">Search</span>
                <div class="navbar-tool-icon-box"><i class="navbar-tool-icon ci-search"></i></div>

            </a>
            
         
            <AuthorizeView>
                <Authorized>
                    <a class="navbar-tool ms-2" href=@("/account") >
                        <span class="navbar-tool-tooltip">Account</span>
                        <div class="navbar-tool-icon-box"><i class="navbar-tool-icon ci-user"></i></div>
                    </a>
                </Authorized>
                <NotAuthorized>
                    <a class="navbar-tool ms-2" href="#signin-modal" data-bs-toggle="modal">
                        <span class="navbar-tool-tooltip">Account</span>
                        <div class="navbar-tool-icon-box"><i class="navbar-tool-icon ci-user"></i></div>
                    </a>
                </NotAuthorized>
            </AuthorizeView>
       
            <CartSummary/>
        </div>

        <div class="collapse navbar-collapse me-auto order-lg-2" id="navbarCollapse">
            <!-- Search (mobile)-->
            <div class="d-lg-none py-3">
                <div class="input-group" data-bs-toggle="offcanvas" data-bs-target="#searchBox">
                    <i class="ci-search position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                    <input class="form-control rounded-start" type="text" placeholder="What do you need?">
                </div>
            </div>
            <AddressDropdown />
            <!-- Primary menu-->
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Cuisine</a>
                 
                    <div class="dropdown-menu px-2 ps-0 pb-4">

                        @for (int i = 1; i <= CategoryListViewModel.TotalPages; i++)
                        {
                  
                            <Cuisine PageNumber="@i"/>
                        }

                    </div>

                </li>
                <li class="nav-item"><a class="nav-link" href="@("/restaurants")">Restaurants</a></li>
                <li class="nav-item"><a class="nav-link" href="Javascript:void(0)">Meal Plan</a></li>

            </ul>
        </div>
    </div>
    <!-- Search collapse-->
    <div class="search-box collapse " >
        <div class="container py-2">
            <div class="input-group" data-bs-toggle="offcanvas" data-bs-target="#searchBox"  >
                <i class="ci-search position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                <input class="form-control rounded-start" type="text" placeholder="What  you need?">
            </div>
        </div>
    </div>
</header>

